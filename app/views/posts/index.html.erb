<h1>Posts: (<%= @posts.count %>) </h1>

<div id="tag_cloud">
  <% tag_cloud Post.tag_counts, %w[s m l] do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>
<hr>
<% @posts.each do |f| %>
  <%= link_to f.title, f %>
  <br>
<% end %>

<hr>
<%= link_to "New", new_post_path %>